@model IEnumerable<Souq.Models.Cart>

@{
    ViewData["Title"] = "Index";
}

<div class="page-header" style="background: url(assets/img/banner1.jpg);">
    <div class="container">
        <div class="row">
            <div class="col-md-12">
                <div class="breadcrumb-wrapper">
                    <h2 class="product-title">Carts</h2>
                    <ol class="breadcrumb">
                        <li><a href="/Home/index">Home /</a></li>
                        <li class="current">Carts</li>
                    </ol>
                </div>
            </div>
        </div>
    </div>
</div>
