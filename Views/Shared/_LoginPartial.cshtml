@using Microsoft.AspNetCore.Identity
@inject SignInManager<IdentityUser> SignInManager
@inject UserManager<IdentityUser> UserManager



<ul class="navbar-nav">
@if (SignInManager.IsSignedIn(User))
{
    <li class="nav-item">
            <a class="nav-link text-dark" asp-area="Identity" asp-page="/Account/Manage/Index" title="Manage">

                <p style="color:#e91e63; font-weight:bold"> Hello @User.Identity?.Name!</p>

        </a>
    </li>
    <li class="nav-item">
            <form class="form-inline"  asp-area="Identity" asp-page="/Account/Logout" asp-route-returnUrl="@Url.Action("Index", "Home", new { area = "" })">
            @* <button  type="submit" class="nav-link btn btn-link text-dark">Logout</button> *@
                <button type="submit" class="nav-link btn btn-link text-dark"><p style="color:#EB1616; font-weight:bold">Logout </p></button>
        </form>
    </li>
    }
    
else
{
    <li class="nav-item">
            <a class="nav-link text-dark" asp-area="Identity" asp-page="/Account/Register"> <p style="color:#e91e63; font-weight:bold">Register </p></a>
    </li>
    <li class="nav-item">
            <a class="nav-link text-dark" asp-area="Identity" asp-page="/Account/Login"> <p style="color:#e91e63; font-weight:bold">Login </p> </a>
    </li>
}
</ul>
