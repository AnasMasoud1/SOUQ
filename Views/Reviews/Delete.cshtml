@model Souq.Models.Review
@{
    Layout = "~/Views/Shared/_LayoutAdmin.cshtml";
}
@{
    ViewData["Title"] = "Delete";
}

<h1>Delete</h1>

<h3 style="color:#EB1616">Are you sure you want to delete this Review?</h3>
<h4>Review</h4>
<hr />
<div class="col-sm-12 col-xl-9" style="margin-left:23px;">
    <div class="bg-secondary rounded h-100 p-4">
        <h6 class="mb-4">Review Table</h6>
        <table class="table table-hover">

            <tbody>

                <tr>
                    <form asp-action="Edit">
                    <th scope="row">1</th>
                    <td>
                            @Html.DisplayFor(model => model.Name)
                    </td>
                    <td>
                            @Html.DisplayFor(model => model.Subject)
                    </td>
                    <td>
                            @Html.DisplayFor(model => model.Email)
                    </td>
                    <td>
                            @Html.DisplayFor(model => model.message)
                    </td>
                    <td>
                        <form asp-action="Delete">
                            <input type="hidden" asp-for="Id" />
                            <input type="submit" value="Delete" class="btn btn-primary wer" /> 
                            <a asp-action="Index" class="btn btn-primary wer">Back</a>
                        </form>
                    </td>
                    </form>
                </tr>

            </tbody>
        </table>
    </div>
</div>